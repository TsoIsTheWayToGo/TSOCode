<form class="form-signin" method="post">
    {{#each errorMessages}}
    <div class="alert alert-danger">
      {{this.msg}}
    </div>
    {{/each}}
  <h2 class="form-signin-heading text-center">New Account</h2>
  <br/>

  <input type="text" class="form-control" name="name" placeholder="Name" require="" autofocus="">
  <br/>
  <input type="email" class="form-control" name="email" placeholder="Email" require="" autofocus="">
  <br/>
  <input type="password" class="form-control" name="password" placeholder="Password" require="">
  <br/>
  <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm Password" require="">
 
  <hr>
  <button class="btn btn-lg btn-success btn-block" type="submit">Sign Up</button>
  <hr/>

  <a href="/auth/facebook" class="btn btn-lg btn-primary btn-block">Sign Up With FaceBook</a>
</form>